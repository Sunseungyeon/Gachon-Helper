<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/read_category"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#080533"
            android:gravity="center"
            android:padding="0sp"
            android:text="Read_category"
            android:textColor="#ffffffff"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/read_category"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="TITLE"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/read_category"
            android:layout_below="@id/title"
            android:layout_marginRight="10dp"
            android:text="see"
            android:textSize="15dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/name_stu_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/see"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/see"
            android:text="Name + ID"
            android:textSize="15dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/see"
            android:layout_below="@id/see"
            android:text="created_at"
            android:textSize="15dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textarea"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/created_at"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:padding="5dp"
            android:text="text texttext texttext texttext texttext texttext texttext texttext text"
            android:textSize="20dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/textarea"
            android:layout_below="@id/textarea"
            android:layout_marginTop="10dp"
            android:background="#080533"
            android:text="확인"
            android:textColor="#ffffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/confirm"
            android:layout_below="@id/textarea"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/confirm"
            android:background="#080533"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="도와주기"
            android:textColor="#ffffffff"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>